<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"

    android:background="@drawable/white_shap"

    android:layout_height="230dp"
    >
<LinearLayout
    android:layout_marginTop="10dp"
  android:layout_below="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout

        android:orientation="vertical"

        android:layout_below="@+id/payim"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ConstantClasss.Custom_Textview
            android:textAlignment="center"
            android:gravity="center"

            android:id="@+id/txt_signin"
            android:textStyle="bold"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"



            android:text="شكرا لك "

            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            />
        <ConstantClasss.Custom_Textview

            android:textStyle="bold"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"



            android:text="لإستخدامك التطبيق"

            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            />
        <ConstantClasss.Custom_Textview

            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="سوف يقوم المتجر بالتواصل معك لتوصيل الطلب "
            android:textColor="#a7a7a7a7"
            android:textSize="12sp"
            />
        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:id="@+id/ripple_confirm"
            android:layout_below="@+id/input_layout_code"
            android:layout_width="230dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:padding="4dp"
            android:background="@drawable/button_shap"
            android:layout_height="40dp"
            >
            <ConstantClasss.Custom_Textview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="3dp"
                android:textSize="13sp"
                android:text="الذهاب الى الرئيسية"
                android:textColor="@android:color/white"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="90dp"
        android:layout_centerHorizontal="true"
        android:layout_height="90dp">
        <ImageView
        android:id="@+id/payim"
        android:src="@drawable/pay"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>
