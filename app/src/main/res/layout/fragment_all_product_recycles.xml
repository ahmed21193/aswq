<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layoutDirection="rtl"
    android:layout_height="match_parent"
    tools:context="Fragments.AllProductRecyclesFragment">

    <LinearLayout
        android:layoutDirection="rtl"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layoutDirection="rtl"
            android:background="#f9f7f7"
            android:layout_marginBottom="2dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/arrow"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <ConstantClasss.Custom_Textview
                android:layout_marginRight="10dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:text="الأقسام"
                android:textSize="13sp"
                android:textColor="#9d9d9d"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recDept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layoutDirection="rtl"
            android:layout_marginBottom="2dp"
            android:background="#f9f7f7"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:src="@drawable/arrow"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <ConstantClasss.Custom_Textview
                android:layout_marginRight="10dp"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:text="احدث المنتجات"

                android:textColor="#9d9d9d"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/proRc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:layoutDirection="rtl"
            android:layout_marginBottom="2dp"
            android:background="#f9f7f7"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:src="@drawable/arrow"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <ConstantClasss.Custom_Textview
                android:layout_marginRight="10dp"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:text="الأكثر مبيعا"

                android:textColor="#9d9d9d"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/moreRc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_marginBottom="2dp"
            android:background="#f9f7f7"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <ImageView
                android:layout_marginTop="2dp"
                android:layout_gravity="center"
                android:src="@drawable/arrow"
                android:layout_width="15dp"
                android:layout_height="15dp" />
            <ConstantClasss.Custom_Textview
                android:layout_marginRight="10dp"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:text="كل المنتجات"

                android:textColor="#9d9d9d"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/allRecyPro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>
