<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"


    android:orientation="vertical">

    <RelativeLayout
        android:layout_margin="5dp"
        android:layout_width="280dp"
        android:layoutDirection="ltr"
        android:layout_height="215dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/white_shap"
>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bottom_shapp">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"

                android:layout_height="match_parent"
                android:gravity="center">
                <!--<com.like.LikeButton-->
                    <!--android:id="@+id/star_button"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--app:icon_type="Star"-->
                    <!--app:circle_start_color="@color/colorPrimary"-->
                    <!--app:like_drawable="@drawable/thumb_on"-->
                    <!--app:unlike_drawable="@drawable/thumb_off"-->
                    <!--app:dots_primary_color="@color/colorAccent"-->
                    <!--app:dots_secondary_color="@color/colorPrimary"-->
                    <!--app:circle_end_color="@color/colorAccent"-->
                    <!--app:icon_size="18sp"-->
                    <!--app:liked="true"-->
                    <!--android:layout_marginLeft="20dp"-->
                    <!--app:anim_scale_factor="2"-->
                    <!--app:is_enabled="false"-->
                    <!--/>-->
                <ImageView

                    android:layout_gravity="center"
                    android:layout_width="18dp"
                    android:layout_height="18sp"
                    android:layout_marginLeft="20dp"
                    android:paddingRight="3dp"
                    android:src="@drawable/im1" />
            </LinearLayout>

            <RelativeLayout
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1.5">

                <ImageView
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/line" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@drawable/im2" />
            </RelativeLayout>

            <RelativeLayout

                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="0.5dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/line" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerInParent="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:src="@drawable/cart" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageView

                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/bggicon" />
            </RelativeLayout>

            <ConstantClasss.Custom_Textview
                android:layout_marginRight="10dp"
                android:id="@+id/txt_signin"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"

                android:text="لاب توب لينوفو"
                android:textColor="#000"
                android:textSize="10sp"
                />
            <ConstantClasss.Custom_Textview
                android:layout_marginRight="10dp"
                android:id="@+id/des"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"

                android:text="لاب ينوفو جديد عالى الجوده من حيث الرمات والبروسيسور حيث يحتوى على رمات عاليه الجودة بمواصفات عاليه جدا "
                android:textColor="#a1a1a1"
                android:textSize="10sp"
                />

            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layoutDirection="ltr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.whinc.widget.ratingbar.RatingBar
                    android:layout_centerVertical="true"
                    android:id="@+id/ratingBar"
                    android:layout_width="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_height="15dp"
                    android:layout_gravity="center"
                    app:rb_click_rating="false"
                    app:rb_count="4"
                    app:rb_empty="@drawable/empty"
                    app:rb_fill="@drawable/fill"
                    app:rb_max_count="5"
                    app:rb_space="2dp"
                    app:rb_touch_rating="false"
                    android:layout_alignParentRight="true" />
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:id="@+id/ripple_lgin"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_below="@+id/check_agree"

                   android:layout_alignParentStart="true"
                    android:layout_gravity="center"

                    android:background="@drawable/button_shap"
                    android:gravity="center"
                    android:onClick="onClick"
                    android:layout_alignParentLeft="true">

                    <ConstantClasss.Custom_Textview

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ripple_lgin"
                        android:layout_centerHorizontal="true"

                        android:text="2500,000 SAR"
                        android:textColor="@android:color/white"
                        android:textSize="10sp" />
                </LinearLayout>
            </RelativeLayout>



        </LinearLayout>
    </RelativeLayout>
</LinearLayout>