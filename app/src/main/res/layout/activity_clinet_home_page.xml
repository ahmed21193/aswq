<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    android:id="@+id/drawer_lay"
    android:background="#f7f5f5"

    android:orientation="vertical"
    tools:context="souk.arab.com.soukelarab.ClinetHomePage">

    <RelativeLayout
        android:layoutDirection="rtl"
        android:background="#f7f5f5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ScrollView
        android:layout_above="@+id/linn"
        android:id="@+id/sc"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


<RelativeLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:background="@drawable/menu"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/ic_menu_white_24dp" />
            <ConstantClasss.Custom_Textview
                android:id="@+id/txt_signin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="القائمة الرئيسية"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_height="70dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <LinearLayout
                android:id="@+id/lin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.99"
                android:background="@drawable/edittbg"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:background="@drawable/filter_shap">

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/filteration" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
<LinearLayout
    android:orientation="vertical"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


</LinearLayout>

</LinearLayout>

</RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/linn"

        android:weightSum="5"
        android:background="#4b3286"
        android:orientation="horizontal"
      android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp">
    <LinearLayout
        android:id="@+id/h1"
        android:layout_weight="1"
        android:layoutDirection="rtl"
        android:background="#381e75"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/homee"
            android:layout_width="18dp"
            android:layout_height="14dp" />


    </LinearLayout>
        <LinearLayout
            android:id="@+id/h2"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView

                android:src="@drawable/matger"
                android:layout_width="18dp"
                android:layout_height="14dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/h3"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/cartt"
                android:layout_width="18dp"
                android:layout_height="14dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/h4"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/heart"
                android:layout_width="18dp"
                android:layout_height="14dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/h5"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:src="@drawable/setting"
                android:layout_width="18dp"
                android:layout_height="14dp" />
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
    <fragment
        android:id="@+id/nv_fragment"
        android:name="Fragments.NavigationDrawer"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>
