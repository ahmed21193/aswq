<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bgg"
    android:scrollbars="none"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">
        <ConstantClasss.Custom_Textview
            android:id="@+id/txt_signin"
            android:layout_width="wrap_content"
            android:textColor="@android:color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:textSize="13sp"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_arrow"
            android:drawablePadding="5dp"
            android:text="إنشاء حساب مقدم الخدمة"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_step2"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/txt_signin"
            android:background="@drawable/ic_step2"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/img_addpic"
            android:layout_width="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/img_step2"
            android:background="@drawable/ic_store"
            android:layout_height="100dp" />
        <LinearLayout
            android:id="@+id/ripple_add"
            android:layout_below="@+id/img_addpic"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:gravity="center"
            android:background="@drawable/button_shap"
            android:layout_height="40dp"
            >
            <ConstantClasss.Custom_Textview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                android:textSize="13sp"
                android:textStyle="bold"
                android:text=" إضافة صورة المحل او المتجر"
                android:textColor="@android:color/white"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/img_docdpic"
            android:layout_width="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ripple_add"
            android:background="@drawable/ic_addpics"
            android:layout_height="100dp" />
        <LinearLayout
            android:id="@+id/ripple_adddoc"
            android:layout_below="@+id/img_docdpic"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"

            android:background="@drawable/button_shap"
            android:layout_height="40dp"
            >
            <ConstantClasss.Custom_Textview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                android:textSize="13sp"
                android:textStyle="bold"
                android:text=" شعار المحل"
                android:textColor="@android:color/white"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/img_carpic"
            android:layout_width="100dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ripple_adddoc"
            android:background="@drawable/ic_addpics"
            android:layout_height="100dp" />
        <LinearLayout
            android:id="@+id/ripple_addcarpic"
            android:layout_below="@+id/img_carpic"
            android:layout_width="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:layout_marginRight="20dp"

            android:background="@drawable/button_shap"
            android:layout_height="40dp"
          >
            <ConstantClasss.Custom_Textview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:padding="5dp"
                android:textSize="13sp"
                android:textStyle="bold"
                android:text=" صورة السجل التجاري"
                android:textColor="@android:color/white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:id="@+id/ripple_next"
            android:layout_below="@+id/ripple_addcarpic"
            android:layout_width="200dp"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"

            android:background="@drawable/button_shap"
            android:layout_height="40dp"
            >
            <ConstantClasss.Custom_Textview
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                android:textSize="13sp"

                android:textStyle="bold"

                android:text="التالي"
                android:textColor="@android:color/white"
                />
        </LinearLayout>
    </RelativeLayout>
</ScrollView>