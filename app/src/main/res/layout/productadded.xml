<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/movebg"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/img_done"
    android:layout_width="wrap_content"
android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:background="@drawable/ic_productadded"
    android:layout_height="wrap_content" />
    <CheckedTextView
        android:id="@+id/txt_confirm"
        android:layout_width="wrap_content"
        android:layout_below="@+id/img_done"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:maxLines="2"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:text="وسيتم تفعيل الحساب قريبا فور التأكد من صحة البيانات المدخلة عن طريق الإدرة"
        android:layout_height="wrap_content" />

    <com.andexert.library.RippleView
        android:id="@+id/ripple_home"
        android:layout_below="@+id/txt_confirm"
        android:layout_width="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:padding="5dp"
        android:background="@drawable/bg_login"
        android:layout_height="wrap_content"
        rv_centered="true">
        <ConstantClasss.Custom_Textview
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:textSize="16sp"
            android:text="الذهاب الي الرئيسية"
            android:textColor="@android:color/white"
            />
    </com.andexert.library.RippleView>
</RelativeLayout>
