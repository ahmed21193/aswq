<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/splach"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_logoo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="متجر باتا"
            android:textColor="@color/wite"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/ic_location"
            android:text="متجر باتا"
            android:textColor="@color/wite"
            android:textSize="14sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/status_bg"
            android:text="إضافة وصف للمنتج"
            android:textColor="@color/movebg" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/wite"
        android:orientation="vertical">
        <TextView
            android:id="@+id/txt0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/movebg"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:text="0" />
        <TextView
            android:id="@+id/txtproduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/lightMove"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:text="منتج في المتجر" />
    </LinearLayout>
<com.andexert.library.RippleView
    android:layout_width="match_parent"
    android:id="@+id/btnadd"
    android:background="@color/movebg"
    android:layout_marginRight="20dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="20dp"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:text="اضف منتج"
        android:textColor="@color/wite"
        android:textSize="16dp"
        android:background="@color/movebg"
        android:layout_height="wrap_content" />
</com.andexert.library.RippleView>
</LinearLayout>
